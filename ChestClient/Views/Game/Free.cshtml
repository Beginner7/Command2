@{
    ViewBag.Title = "Game";
}

<h2>Свободная игра</h2>

    
<script src="@Url.Content("~/Scripts/GameUI.js")" type="text/javascript"></script>
<table>
    <tr>
        <td>
            <table id="board">

                @for (int i = 0; i < 9; i++)
                {
                    <tr>
                        @for (int j = 0; j < 9; j++)
                        {
                            if (j == 0 && i == 0)
                            {
                                <td> </td>
                            }
                            else if (j == 0)
                            {
                                <td>@(9-i) </td>
                            }
                            else if (i == 0)
                            {
                                <td>@((char)('A' + j - 1)) </td>
                            }
                            else if ((i + j) % 2 == 0)
                            {
                                <td bgcolor="FFFFFF" id = @(((char)('a' + j - 1)).ToString() + (9 - i).ToString())> </td>
                            }
                            else
                            {
                                <td bgcolor="000000" id = @(((char)('a' + j - 1)).ToString() + (9 - i).ToString())> </td>
                            }
                        }
                    </tr>
                }
            </table>
        </td>
        <td>
            <h4>Статус игры:</h4>
            <div id="gamestatus"></div>
            <h4>Чей ход:</h4>
            <div id="turn"></div>
            <h4>Игрок за белых:</h4>
            <div id="playerwhite"></div>
            <h4>Игрок за черных:</h4>
            <div id="playerblack"></div>
            <h4>Съеденные белые:</h4>
            <div id="whiteout"></div>
            <h4>Съеденные черные:</h4>
            <div id="blackout"></div>
            <h4 >Список ходов:</h4>
            <div id="moveslist" style="height: 150px; overflow-y: scroll; display: block;"></div>

        </td>
    </tr>
</table>

<div id="dialogWhitePromotion" title="Превращение пешки" style="display: none;">
    <img src="/Content/figure/QW.png" alt="Pawn" width="40" height="40" />
    <img src="/Content/figure/RW.png" alt="Pawn" width="40" height="40" />
    <img src="/Content/figure/BW.png" alt="Pawn" width="40" height="40" />
    <img src="/Content/figure/KW.png" alt="Pawn" width="40" height="40" />
</div>

<div id="dialogBlackPromotion" title="Превращение пешки" style="display: none;">
    <img src="/Content/figure/QB.png" alt="Pawn" width="40" height="40" />
    <img src="/Content/figure/RB.png" alt="Pawn" width="40" height="40" />
    <img src="/Content/figure/BB.png" alt="Pawn" width="40" height="40" />
    <img src="/Content/figure/KB.png" alt="Pawn" width="40" height="40" />
</div>
