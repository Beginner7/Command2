<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
        <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.20.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/ChatUI.js")" type="text/javascript"></script>
    </head>
    
    <body>
       <style> #mainblock { z-index: 1; }
        #footer { z-index: 2; }</style>
        <div id="logindisplay">
            @Html.Partial("_LogOnPartial")
        </div>


        <table id="menucontainer">
            <tr>
                <td class="spacer">&nbsp;</td>
                <td class="header">@Html.ActionLink(" ", "Index", "Home", null, new { @class = "homelink" })</td>
                <td class="spacer">&nbsp;</td>
                <td class="menu">
                    <ul id="menu">
                        <!--<li>@Html.ActionLink("Игра с другом", "Index2", "Game")</li>-->
                        <li>@Html.ActionLink("Играть", "Index", "Game")</li>
                    </ul>
                </td>
            </tr>
        </table>

        <table id="mainblock">
            <tr>
                <td style="width:15%;vertical-align:top;padding-left:10px;padding-top: 50px;">
                    <h2><li>@Html.ActionLink("О программе", "About", "Home")</li></h2>
                    <h2><li><a href="/Content/client/ChessClient.zip">Скачать клиент</a></li></h2>
                    <h2><li style="cursor:pointer;">Чат</li></h2><br/>
                    <table >
                        <tr>
                            <td style="position:absolute;overflow-y: scroll;overflow-x:visible;width: 200px;height: 300px;padding: 5px;border: solid 1px black">
                                <!--
                                    <div id="mymessage" class="pane alt">
                                        <p><a href="#" class="btn-delete">Delete</a>|</p>
                                    </div>
                                    <div id="ennemysmessage"class="pane spam">
                                        <p><a href="#" class="btn-delete">Delete</a>|</p>
                                    </div>
                                    -->
                                <div id="messagesclass"></div>
                                <form>
                                    <input type=text id="MessageArea" name="Message" size=10>
                                    <input type="button" id="SendMessageButton" name="SendMessage" value="Отправить">
                                </form>
                            </td>
                        </tr>
                    </table>

                </td>
                <td>
                
                    <div id="main">
                        @RenderBody()
                    </div>
                </td>
             
            </tr>
        </table>
        <div id="footer">
            Copyright © Command2 2014 &nbsp;<br />
            Все права защищены&nbsp;
        </div>

    </body>
</html>
